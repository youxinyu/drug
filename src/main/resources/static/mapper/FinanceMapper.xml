<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.guigu.drug.tanlong.dao.FinanceDao" >

    <update id="financeupd" parameterType="com.guigu.drug.tanlong.pojo.Finance">

        update finance set blance=#{blance}  where fid=1

    </update>

    <select id="financesel" resultType="com.guigu.drug.tanlong.pojo.Finance">

        select * from finance where fid=1

    </select>

</mapper>